<section>

	<div class="row">	
		<div class="col-md-3 select">

			<div class="form-group">
				<label> Speaker Avatar </label>			
				<%= f.file_field :avatar, type: :file %>
			</div>			

			<div class="form-group">
				<label> Name </label>
				<%= f.text_field :speaker_name, class: "form-control" %>
			</div>


			<div class="form-group">
				<label> Description </label>
				<%= f.text_field :description, class: "form-control" %>
			</div>

		</div>
		
	</div>


	<div class="row">	
		<div class="col-md-3 right">	
			<%= f.hidden_field :_destroy %>
			<%= link_to "Remove", '#', class: 'remove_record btn btn-primary' %>
		</div>
	</div>

</section>