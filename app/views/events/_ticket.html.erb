<section>
<div class="row">

<hr>
		<div class="row">	
			<div class="col-md-3 select">	
				<div class="form-group">
					<label> Ticket Name</label>
					<%= f.text_field :ticket_name, placeholder: "Name of ticket", class: "form-control" %>
				</div>
			</div>

			<div class="col-md-2 select">	
				<div class="form-group">
					<label> Ticket Quantity</label>
					<%= f.number_field :ticket_quantity, placeholder: "Number of tickets", class: "form-control" %>
				</div>
			</div>

			<div class="col-md-2 select">	
				<div class="form-group">
					<label> Price </label>
					<%= f.number_field :ticket_price, :step => "0.01", placeholder: "Price", class: "form-control" %>
				</div>
			</div>
		</div>

		<div class="row">	
			<div class="col-md-4 select">	
				<div class="form-group">
					<label> Ticket Description </label>
					<%= f.text_field :ticket_description, placeholder: "If ticket value needs to be described", class: "form-control" %>
				</div>
			</div>

			<div class="col-md-3 right">	
				<% f.text_field :_destroy, as: :hidden %>
				<%= link_to "Delete", '#', class: 'remove_record btn btn-danger' %>
			</div>
		</div>

		<div class="row">	
			<div class="col-md-4 select">	
				<div class="form-group">
					<label> Start Date </label>
					<%= f.date_select :ticket_start_date , class: "form-control" %>
				</div>
			</div>
			<div class="col-md-4 select">	
				<div class="form-group">
					<label> Start time </label>
					<%= f.time_select :ticket_start_time , class: "form-control" %>
				</div>
			</div>
		</div>

		<div class="row">	
			<div class="col-md-4 select">	
				<div class="form-group">
					<label> End Date </label>
					<%= f.date_select :ticket_end_date , class: "form-control" %>
				</div>
			</div>

			<div class="col-md-4 select">	
				<div class="form-group">
					<label> End time </label>
					<%= f.time_select :ticket_end_time , class: "form-control" %>
				</div>
			</div>
		</div>

<hr>	
	</div>
</section>
