<section class= "create-ticket-wrapper pt-25 pb-25">

			<div class="panel panel-default panel-shadow ">
				<div class="panel-heading panel-form-pass">
					<div class="form-group pass-placeholder">
						<%= f.input :ticket_name, label: false, placeholder: "Pass Name, i.e., Early Bird", input_html: {class: "form-control input_box input_box-pass-name"}, placeholder_html: {class: "pass-placeholder"} %>
					</div>
				</div>
				<div class="panel-body ">

					<div class="cover-quantity-price-box">

						<div class="quantity-price-box">	
								<%= f.input :ticket_price, placeholder: "20.00", class: "form-control", label: "Base Price", input_html: {class: "input_box txtn"} %>
						</div>
						<div class="quantity-price-box quantity-price-box-second">	
								<%= f.input :reward_fee, :step => "0.01", placeholder: "5.00", class: "form-control", label: "Reward Fee", input_html: {class: "input_box txtn"} %>
						</div>
						<div class="total-base-reward">
							<i class="ti-info-alt info-alt"></i>Total Price = Base price + Reward Fee <!-- <span class="sum-base-reward">$</span><span class="sum-base-reward" id="sumn">0</span> -->
							<%= link_to "How pricing works?", join_path, target: :_blank, class: "learn-pricing" %>
						</div>
						
						<div class="">	
								<%= f.input :ticket_quantity, placeholder: "300", class: "form-control", label: "Quantity", input_html: {class: "input_box"} %>
						</div>
					</div>
					<div>	
						<div >	
							<div class="form-group">
								<%= f.input :ticket_description, placeholder: "Not required", class: "form-control", label: "Pass Description", input_html: {class: "input_box"}, :as => 'text'%>
							</div>
						</div>

						<div class="remove-ticket-button">	
							<%= f.hidden_field :_destroy %>
							<%= link_to "Remove", '#', class: 'remove_record  btn btn-dark-out', data: { turbolinks: false } %>
						</div>
					</div>
						
				</div>
			</div>   




</section>


