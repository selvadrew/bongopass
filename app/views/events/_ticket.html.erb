<section>
<div >

<hr>
		<div>	
			<div class="select">	
				<div class="form-group">
					<%= f.input :ticket_name, placeholder: "Name of ticket", class: "form-control" %>
				</div>
			</div>

			<div>	
				<div class="form-group">
					<%= f.input :ticket_quantity, placeholder: "Number of tickets", class: "form-control" %>
				</div>
			</div>

			<div>	
				<div class="form-group">
					<%= f.input :ticket_price, :step => "0.01", placeholder: "Price", class: "form-control" %>
				</div>
			</div>
		</div>

		<div>	
			<div >	
				<div class="form-group">
					<%= f.input :ticket_description, placeholder: "If ticket value needs to be described", class: "form-control" %>
				</div>
			</div>

			<div>	
				<%= f.hidden_field :_destroy %>
				<%= link_to "Delete", '#', class: 'remove_record btn btn-danger' %>
			</div>
		</div>



<hr>	
	</div>
</section>
