    <section>
      <div class="container">
        <div class="title center">
          <h4 class="upper">Submit your application.</h4>
          <h2>Let's Work Together<span class="red-dot"></span></h2>
          <hr>
        </div>
        <div class="section-content">
          <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="">
                <%= simple_form_for @join, :html => {:class => '' } do |f| %>
                  <div class="form-group">
                    <%= f.input :full_name, :required => true, :placeholder => "Full Name", label: false, input_html: {class: "join-form-inputs"} %>
                  </div>
                  <div class="form-group">
                    <%= f.input :email, :required => true, label: false, :placeholder => "Email", input_html: {class: "join-form-inputs"} %>
                  </div>
                  <div class="form-group">
                    <%= f.input :phone, label: false, :placeholder => "Phone Number", input_html: {class: "join-form-inputs"} %>
                  </div>
                  <div class="form-group">
                    <%= f.input :website, label: false, :required => true, :placeholder => "Website or Facebook Page", input_html: {class: "join-form-inputs"} %>
                  </div>
                  <div class="form-group">
                    <%= f.input :ticket_count, label: false, :required => true, :placeholder => "# Guests per event", input_html: {class: "join-form-inputs"} %>
                  </div>
                  <div class="form-group">
                    <%= f.input :event_count, label: false, :required => true, :placeholder => "# Events per year", input_html: {class: "join-form-inputs"} %>
                  </div>
                  <div class="form-group">
                    <%= f.input :tell_us_more, label: false, :required => true, :placeholder => "Tell us more so we could serve you better", input_html: {class: "join-form-inputs"}, as: :text %>
                  </div>
                  <div class="form-group">
                    <%= f.input :invite, label: false, :placeholder => "Include your access code here if you were invited by us", input_html: {class: "join-form-inputs"}, as: :text %>
                  </div>
                  <div class= "hidden">
                    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                    <%= f.input :user, :input_html => { :value => @email} %>
                  </div>

                  <div class="form-group text-center">
                    <button type="submit" class="btn btn-color">Submit Application</button>
                  </div>
                <% end %>
              </div>
              <!-- end of contact form-->
            </div>
          </div>
          <!-- end of row-->
        </div>
        <!-- end of section content-->
      </div>
    
    </section>





