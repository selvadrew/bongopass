    <!-- End Preloader-->
    <!-- Navbar-->
    <header id="topnav" class="pink-nav">
      <div class="container">
        <div class="logo bongo-logo-adjust" >
          <a>

            <%= link_to "BONGOPASS", root_path, class: " white-text navbar-brand bongo-design-white nav-height-adjust logo-dark bongo-alignment fw-900 ", data: { turbolinks: false } %>
          </a>
        </div>
        <div class="menu-extras">
          <div class="menu-item">
            <a class="navbar-toggle">
              <div class="lines "><span></span><span></span><span></span>
              </div>
            </a>
          </div>
        </div>
        <div id="navigation" data-onepage="true">
          <% if (!user_signed_in?) %>

            <ul class="navigation-menu nav pink-nav-text">
              <li><%= link_to "Help", support_path, data: { turbolinks: false }, class: "pink-nav-text" %>
              </li>
              <li><%= link_to "Log In", new_user_session_path, data: { turbolinks: false }, class: "pink-nav-text"  %>
              </li>
              <li><%= link_to "Sign Up", new_user_registration_path, data: { turbolinks: false }, class: "pink-nav-text"  %>
              </li>
            </ul>

          <% else %>

            <ul class="navigation-menu nav hidden-sm hidden-xs pink-nav-text">
              <li><%= link_to "Help", support_path, data: { turbolinks: false }, class: "pink-nav-text"  %>
              </li>
              <li class="has-submenu">
                <a class= "pink-nav-text">
                  <% if avatar_url(current_user) %>
                    <%= image_tag avatar_url(current_user), class: "img-circle avatar-small" %>&nbsp; 
                  <% end %>
                  <%= current_user.fullname %>
                </a>
                  <ul class="submenu">                    
                    <% if current_user && current_user.create_permission == "allow" %>
                      <li><%= link_to "My Events", events_path, data: { turbolinks: false }  %></li>
                      <li><%= link_to "My Tickets", purchases_path, data: { turbolinks: false } %></li>
                    <% end %>
                        
                    <li><%= link_to "Log Out", destroy_user_session_path, method: :delete, data: { turbolinks: false }  %></li> 
                  </ul>

                <% if current_user && current_user.create_permission != "allow" %>
                  <li><%= link_to "My Tickets", purchases_path, data: { turbolinks: false }, class: "pink-nav-text"  %></li>
                <% end %>

                <% if current_user && current_user.create_permission == "allow" %>
                  <li><%= link_to "Create Event", new_event_path, data: { turbolinks: false }, class: "pink-nav-text" %></li>
                <% end %>
              </li>
            </ul>

            <ul class="navigation-menu nav hidden-md hidden-lg hidden-xl">
              <% if current_user && current_user.create_permission == "allow" %>
                <li><%= link_to "Create Event", new_event_path, data: { turbolinks: false }  %></li>
                <li><%= link_to "My Events", events_path, data: { turbolinks: false }  %></li>
              <% end %>
              <li><%= link_to "My Tickets", purchases_path, data: { turbolinks: false }  %></li>
              <li><%= link_to "Help", support_path, data: { turbolinks: false }  %></li>
              <li><%= link_to "Log Out", destroy_user_session_path, method: :delete, data: { turbolinks: false }  %></li>
            </ul>


          <% end %>
        </div>
      </div>
    </header>
    <!-- End Navbar-->

<% end %>


<style>
  #topnav.scroll .navbar-toggle span {
    background-color: white !important;
  }
</style>