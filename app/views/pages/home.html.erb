

    <!-- Home Section-->
    <section id="home" class="splash parallax">
      <div data-parallax="scroll" data-image-src="https://s3.ca-central-1.amazonaws.com/bongopass/austin-neill-247047-2+copy.jpg" class="parallax-bg"></div>
      <div class="centrize">
        <div class="v-center">
          <div class="container">
            <div class="row">
              <div class="col-md-8">
                <div class="title">
                  <h2 class="fw-400">Great Experiences Together</h2>
                  <p class="landing-page-explainer">Bongopass rewards the attendees who help friends discover an event to join in on because great experiences are always people driven! Just invite your friends to each event you go to and receive credit for every purchase they make. </p> 
                  <p>
                  	<a href="#about" data-scroll="true" class="btn btn-light-out btn-round landing-how-it-works">How it works<i class="ti-control-play"></i></a>
                  	<a class=""><%= link_to "Become a host", join_path, class: "btn btn-light btn-round", data: { turbolinks: false } %> </a>
                  </p>
                </div>
              </div>
            </div>
            <!-- end of row-->
          </div>
          <!-- end of container-->
        </div>
      </div>
    </section>
    <!-- end of home section-->

    <section id="about">
      <div class="container">
      <div class="title center">
          <h4 class="upper">How Bongopass Works - attendees</h4>
          <h2>Welcome to the future of events<span class="red-dot"></span></h2>
          <hr>
        </div>
        <div class="section-content">
          <div class="row">

            <div class="col-sm-4">
              <div class="icon-box-small outlined mb-25"><i class="ti-comment-alt"></i><span class="back-icon"><i class="ti-comment-alt"></i></span>
                <hr>
                <h4>1. Share your link</h4>
                <p>After you purchase a Pass to an event, you will receive a unique event link. Share your link with friends or post it on social media to easily invite others to the same event.</p>
              </div>
              <!-- end of icon box-->
            </div>

            <div class="col-sm-4">
              <div class="icon-box-small boxed mb-25"><i class="icon-trophy"></i><span class="back-icon"><i class="icon-trophy"></i></span>
                <hr>
                <h4>2. Receive credit</h4>
                <p>Bongopass credits your account for each friend that purchases a Pass from your unique event link.</p>
              </div>
              <!-- end of icon box-->
            </div>



            <div class="col-sm-4">
              <div class="icon-box-small mb-25"><i class="icon-wallet"></i><span class="back-icon"><i class="icon-wallet"></i></span>
                <hr>
                <h4>3. Use Credit</h4>
                <p>Use your credit to go to any future event for free!</p>
              </div>
              <!-- end of icon box-->
            </div>

          </div>
          <!-- end of row-->
        </div>
        <!-- end of section content-->
      </div>
      <!-- end of container-->
    </section>


    <section class="dark">
      <div class="container">
